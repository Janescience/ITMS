<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="system.management.information.itms.ProfileFragment">


    <ImageView
        android:id="@+id/imageUser"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="89dp"

        app:srcCompat="@drawable/icon_user"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp" />

    <EditText
        android:id="@+id/txtNameShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:enabled="false"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:text="ชื่อ-นามสกุล"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/imageUser"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/txtPhoneShow"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="เบอร์โทรศัพท์"
        android:textSize="18dp"
        android:textStyle="bold"
        android:ellipsize="start"
        android:gravity="center_horizontal"
        android:inputType="textCapWords|textPersonName"
        android:singleLine="true"
        android:enabled="false"
        android:background="@drawable/rounded_edittext"
        android:layout_below="@+id/txtNameShow"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtEmailShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="อีเมลล์"
        android:textSize="20dp"
        android:layout_below="@+id/txtPhoneShow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/btEditImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="21dp"

        android:background="@drawable/round_button"

        android:drawableStart="@drawable/icon_camera"
        android:gravity="center"
        android:paddingLeft="13dp"
        android:textColor="#fff"
        android:layout_alignBottom="@+id/btEdit"
        android:layout_alignStart="@+id/btProfile" />

    <Button
        android:id="@+id/btProfile"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:background="@drawable/background_button"
        android:text="ประวัติและผลงาน"
        android:textSize="20dp"
        android:layout_below="@+id/txtEmailShow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />

    <Button
        android:id="@+id/btSave"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_button"
        android:drawableLeft="@drawable/icon_save"
        android:paddingLeft="7.5dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#000"
        android:layout_alignBottom="@+id/imageUser"
        android:layout_alignEnd="@+id/btProfile" />

    <Button
        android:id="@+id/btEdit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="23dp"
        android:background="@drawable/round_button"
        android:drawableLeft="@drawable/icon_edit"
        android:paddingLeft="7.5dp"
        android:gravity="center"
        android:textColor="#000"
        android:layout_marginStart="19dp"
        android:layout_alignBaseline="@+id/btSave"
        android:layout_alignBottom="@+id/btSave"
        android:layout_toEndOf="@+id/btSave" />



</RelativeLayout>
