<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="system.management.information.itms.IndexFragment">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="หน้าแรก"
        android:textSize="20dp"
        android:layout_marginTop="66dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/Topic_1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/spinnerShowEdittext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:background="#FFFFFF"
        android:enabled="false"
        android:hint="ข้อมูลจากเว็บไซต์"
        android:inputType="textMultiLine"
        android:textSize="20dp" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_edittext"
        android:text="บันทึก"/>

    <Spinner
        android:id="@+id/spinnerShowEdittext"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:layout_marginTop="13dp" />

    <ImageView
        android:id="@+id/imageSpin"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginBottom="35dp"
        android:scaleType="fitXY"
        android:layout_above="@+id/save"
        android:layout_alignLeft="@+id/Topic_1"
        android:layout_alignStart="@+id/Topic_1"
        />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:drawableLeft="@drawable/icon_edit"
        android:id="@+id/btEdit"
        android:textColor="#fff"
        android:paddingLeft="7.5dp"
        android:layout_marginRight="21dp"
        android:enabled="false"
        android:layout_below="@+id/spinnerShowEdittext"
        android:layout_alignParentEnd="true" />

